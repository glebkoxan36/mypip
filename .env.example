# Node Manager Environment Variables
# Copy this to .env file and fill with your data

# Nownodes API Key (required for all coins)
NOWNODES_API_KEY=your_nownodes_api_key_here

# Master Addresses (for auto-collection)
LTC_MASTER_ADDRESS=ltc1qyour_litecoin_master_address
DOGE_MASTER_ADDRESS=Dyour_dogecoin_master_address
BTC_MASTER_ADDRESS=bc1qyour_bitcoin_master_address

# Web Panel Authentication
NODE_MANAGER_ADMIN_USERNAME=admin
NODE_MANAGER_ADMIN_PASSWORD=your_secure_password_here
NODE_MANAGER_JWT_SECRET=your_jwt_secret_key_here

# Optional Settings
LOG_LEVEL=INFO
DB_PATH=node_data.db
WEB_HOST=0.0.0.0
WEB_PORT=8080
